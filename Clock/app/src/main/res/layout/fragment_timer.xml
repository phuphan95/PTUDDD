<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.huy.clock.TimerActivity">


    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

       >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:id="@+id/timerM">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/stop_watch_text_size2"
                    android:gravity="center"
                    android:text="00"
                    android:id="@+id/timerHour"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HOURS"
                    android:textSize="@dimen/stop_watch_time"
                    android:textColor="@color/orange"
                    android:layout_gravity="right"/>

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="@dimen/stop_watch_text_size2"
                android:gravity="center_vertical"
                android:layout_marginBottom="15dp"
                android:text=":"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/stop_watch_text_size2"
                    android:gravity="center"
                    android:text="00"
                    android:id="@+id/timerMinute"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MINUTES"
                    android:textSize="@dimen/stop_watch_time"
                    android:textColor="@color/orange"
                    android:layout_gravity="right"/>

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="@dimen/stop_watch_text_size2"
                android:gravity="center_vertical"
                android:layout_marginBottom="15dp"
                android:text=":"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/stop_watch_text_size2"
                    android:gravity="center"
                    android:id="@+id/timerSecond"
                    android:text="00"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SECONDS"
                    android:textSize="@dimen/stop_watch_time"
                    android:textColor="@color/orange"
                    android:layout_gravity="right"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="@dimen/stop_watch_text_size2"
                android:gravity="center"
                android:layout_marginBottom="15dp"
                android:text="."/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/stop_watch_text_size2"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/darkOrange"
                    android:id="@+id/timerMilli"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MILLI"
                    android:textSize="@dimen/stop_watch_time"
                    android:textColor="@color/orange"
                    android:layout_gravity="right"/>
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            >

            <Button
                android:id="@+id/button"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="30dp"
                android:text="NEW"
                android:layout_width="150dp"
                android:background="@drawable/roundshapebtn"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/centerPoint"
                android:textColor="@color/white"
                android:layout_marginEnd="11dp" />
            <TextView
                android:id="@+id/centerPoint"
                android:text=""
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true" />

            <Button
                android:id="@+id/button2"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:text="Reset"
                android:textColor="@color/white"
                android:layout_width="150dp"
                android:background="@drawable/roundshapebtn"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/centerPoint"
                android:layout_marginStart="13dp"
                />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:id="@+id/timerE">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/stop_watch_text_size"
                    android:gravity="center"
                    android:text="00"
                    android:id="@+id/timerAfterMinute"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MINUTES"
                    android:textSize="@dimen/stop_watch_time"
                    android:textColor="@color/orange"
                    android:layout_gravity="right"/>

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="@dimen/stop_watch_text_size"
                android:gravity="center_vertical"
                android:layout_marginBottom="15dp"
                android:text=":"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/stop_watch_text_size"
                    android:gravity="center"
                    android:id="@+id/timerAfterSecond"
                    android:text="00"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SECONDS"
                    android:textSize="@dimen/stop_watch_time"
                    android:textColor="@color/orange"
                    android:layout_gravity="right"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="@dimen/stop_watch_text_size"
                android:gravity="center"
                android:layout_marginBottom="15dp"
                android:text=":"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/stop_watch_text_size"
                    android:gravity="center"
                    android:text="00"
                    android:textColor="@color/darkOrange"
                    android:id="@+id/timerAfterMilliSecond"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MILLISECONDS"
                    android:textSize="@dimen/stop_watch_time"
                    android:textColor="@color/orange"
                    android:layout_gravity="right"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</FrameLayout>
